<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/initials"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:text="E"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/senderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/initials"
        android:layout_marginStart="8dp"
        android:text="Edurila.com"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/emailTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="12:34 PM"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/emailSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/initials"
        android:layout_below="@id/senderName"
        android:layout_marginTop="4dp"
        android:text="Subject here"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/emailPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/initials"
        android:layout_below="@id/emailSubject"
        android:layout_marginTop="2dp"
        android:text="Preview of the email content goes here"
        android:textColor="#808080"
        android:textSize="14sp" />
</RelativeLayout>
